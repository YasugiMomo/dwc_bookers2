<!--フラッシュメッセージ-->
<div class="flash-notifications">
  <% flash.each do |key, value| %>
   <%= content_tag(:div, value, class: key) %>
  <% end %>
</div>

<div class="container">
  <div class="row">
   <!--共通テンプレート-->
   <%= render 'books/user_info', user: @user, new: @new %>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= image_tag @user.get_profile_image(100,100) %>
            </td>
            <!--user_idに紐づいた投稿を持ってくる-->
            <td>
              <%= link_to book.title, book_path(book.id) %>
            </td>
            <td>
              <%= book.body %>
            </td>
          <% end %>
          </tr>
        </tbody>
      </table>

    </div>
  </div>
</div>
