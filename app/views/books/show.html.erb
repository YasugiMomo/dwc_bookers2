<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>

    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <!--投稿したユーザの画像と名前-->
            <td>
              <%= image_tag @book.user.get_profile_image(100,100)%><br>
              <%= @book.user.name %>
            </td>
            <td>
              <%= @book.title %>
            </td>
            <td>
              <%= @book.body %>
            </td>
          </tr>
        </tbody>
      </table>

    </div>
  </div>
</div>