
<div class="container px-5 px-sm-0">
  <div class="row">
    <!--共通テンプレート-->
    <%= render 'books/user_info', user: @user, new: @new %>

    <!--右：投稿一覧　投稿したユーザーのprofile_image-->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
          <tr>
            <!--投稿に紐づくユーザーの画像-->
            <td>

            <%= link_to image_tag(book.user.get_profile_image(100,100)), user_path(book.user.id) %>
            </td>
            <!--ユーザーが投稿したtitle-->
            <td>
              <%= link_to book.title , book_path(book.id) %>
            </td>
            <!--ユーザーが投稿したbody-->
            <td>
              <%= book.body %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>