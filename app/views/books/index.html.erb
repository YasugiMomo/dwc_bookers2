<p id="notice">You have update user successfully.</p>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <!--プロフィール画像のフィールドを記述追加-->
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <!--currentuserの名前-->
          </tr>
          <tr>
            <th>intoroduction</th>
            <!--currentuserの自己紹介文-->
          </tr>
        </tbody>
      </table>
      <!--userのプロフィール編集画面へのリンクボタン-->
      <div class="row">
        <%= link_to '/users/:id/edit', class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
      </div>
      <!--投稿フォーム-->
      <h2 class="mt-3">New book</h2>
      <%= form_with model: .new do |f| %>
        <label>Title</label>
        <%= f.text_field :title %>
	
        <label>Opinion</label>
        <%= f.text_area :body %>
	
        <%= f.submit 'Create Book' %>
      <% end %>
    </div>
  </div>
</div>