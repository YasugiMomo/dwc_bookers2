
<div class="container px-5 px-sm-0">
  <div class="row">
    <!--共通テンプレート-->
    <div class="col-md-3">
      <h2>User info</h2>
      <!--プロフィール画像-->
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
           <!--userのプロフィール編集画面へのリンクボタン-->
      <div class="row">
        <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
         <i class="fas fa-user-cog"></i>
        <% end %>
      </div>

      <!--投稿フォーム-->
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @new do |f| %>

      <div class="form-group">
        <label for="book_title">Title</label><br>
        <%= f.text_field :title %>
      </div>

      <div class="form-group">
        <label for="book_body">Opinion</label><br>
        <%= f.text_area :body %>
      </div>

      <div clas="form-group">
        <%= f.submit 'Create Book' %>
      </div>
      <% end %>
    </div>
    <!--共通テンプレート-->

    <!--右：投稿一覧　投稿したユーザーのprofile_image-->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
          <tr>
            <!--投稿に紐づくユーザーの画像-->
            <td>

            <%= link_to image_tag(book.user.get_profile_image(100,100)), user_path(book.user.id) %>
            </td>
            <!--ユーザーが投稿したtitle-->
            <td>
              <%= link_to book.title , book_path(book.id) %>
            </td>
            <!--ユーザーが投稿したbody-->
            <td>
              <%= book.body %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>