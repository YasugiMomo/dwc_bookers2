<p id="notice">You have update user successfully.</p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <!--プロフィール画像-->
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
           <!--userのプロフィール編集画面へのリンクボタン-->
      <div class="row">
        <%= link_to '/users/:id/edit', class: "btn btn-outline-secondary btn-block" do %>
         <i class="fas fa-user-cog"></i>
        <% end %>
      </div>

      <!--投稿フォーム-->
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @ do |f| %>
      
      <div class="form-group">
        <label>Title</label>
        <%= f.text_field :title %>
      </div>
      
      <div class="form-group">
        <label>Opinion</label>
        <%= f.text_area :body %>
      </div>
      
      <div clas="form-group">
        <%= f.submit 'Create Book' %>
      </div>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books detail</h2>
      <table class="table">
        <td>
          <%= image_tag @user.get_profile_image(100,100) %>
          <br>
          <%= @user.name %>
        </td>
        <!--titile-->
        <td></td>
        <!--body-->
        <td></td>
        <!--booksの編集画面へ遷移するボタン-->
        <td></td>
        <!--destroyのボタン-->
        <td></td>
      </table>
      
    </div>
  </div>
</div>